
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
}
<style>
    body {
        background-image: url('/image/BookImage.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    #wrapper {
        padding-left: initial !important;
    }

    .editor-label {
        margin: 1em 0;
        text-align: center;
    }

    .login_form {
        width: 350px;
        border-radius: 8px;
        background: rgba(248, 249, 250, 0.9); /* Slightly transparent background */
        padding: 20px;
        margin: 80px auto;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
    }

        .login_form h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #343a40;
        }

    .divider {
        height: 2px;
        background-color: #343a40;
        margin: 10px 0 20px;
        border-radius: 5px;
    }

    .login_form .btn {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
    }

    .login_form .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .login_form .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .spacer10 {
        margin-bottom: 10px;
    }
</style>


<div class="col-lg-12 col-md-12 col-xs-12">
    <div class="login_form">
        <h2>Book Management</h2>
        <div class="divider"></div>
        <div class="editor-label">
            <a href="/Home/BookList" class="btn btn-primary"><i class="fa fa-list"></i> Book List</a>
        </div>
        <div class="spacer10"></div>
        <div class="editor-label">
            <a href="/home/CreateBook" class="btn btn-primary"><i class="fa fa-plus"></i> Add New Book</a>
        </div>
    </div>
</div>
